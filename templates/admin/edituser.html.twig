{% extends 'template.html.twig' %}
{% block body %}

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
       <div class="container-fluid">
        <div class="row">
          <!-- left column -->
          <div class="col-md-6 offset-3">
         
            <!-- general form elements -->
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Modifier User</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              
                <div class="card-body">
                  {{ form_start(editUserForm) }}
                  <div class="col">{{ form_row(editUserForm.fname) }}</div>
                <div class="col">{{ form_row(editUserForm.lname) }}</div>
                <div class="col">{{ form_row(editUserForm.email) }}</div>
                <div class="col">{{ form_row(editUserForm.username) }}</div>
                <div class="col">{{ form_row(editUserForm.roles) }}</div>
                <div class="col">{{ form_row(editUserForm.createdAt) }}</div>
               
                </div>
                
                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div>
               {{ form_end(editUserForm) }}
            </div>
           </div>
           </div>
           </div> 
      

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

{% endblock %}
