{% extends 'template.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    
    <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
        <section class="content">

      <!-- Default box -->
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Budget Planning <small>FY22</small></h3>
        </div>
        <div class="card-body">
          <div class="row">
          <div class="col-md-4">
            <!-- Widget: user widget style 2 -->
            <div class="card card-widget widget-user-2">
              <div class="card-footer p-0">
                <ul class="nav flex-column">
                  <li class="nav-item">
                    <a href="#" class="nav-link" id="budgetMenu">
                      Budget <span class="float-right">></span>
                    </a>
                  </li>
                  <li class="nav-item" id="projectMenu">
                    <a href="#" class="nav-link" >
                      Projet <span class="float-right">></span>
                    </a>
                  </li>
                  <li class="nav-item">
                    <a href="#" class="nav-link">
                      Balance <span class="float-right">></span>
                    </a>
                  </li>
                  <li class="nav-item">
                    <a href="#" class="nav-link">
                      Requisition <span class="float-right">></span>
                    </a>
                  </li>
                </ul>
              </div>
            </div>
            <!-- /.widget-user -->
          </div>
          <!-- /.col -->
      <div class="col-md-8">
          <div class="card">
            <div class="card-header">
      <div id="budget">
              <div class="row">
          <div class="col-md-6">
            <div class="card card-info direct-chat">
              <div class="card-header">
                <h3 class="card-title">Budget Global</h3>

                <div class="card-tools">
                  <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                  </button>
                  <button type="button" class="btn btn-tool" data-card-widget="remove">
                    <i class="fas fa-times"></i>
                  </button>
                </div>
                
              </div>
              <!-- /.card-header -->
              <div class="card-body">

                 <div class="direct-chat-messages"> </div>

              </div>
               <div class="card-footer">
                <center><button type="submit" class="btn btn-info btn-xs">+ Budget</button></center>
              </div>
              <!-- /.card-footer-->
            </div>
          </div>
        
          <div class="col-md-6">
            <div class="card card-info direct-chat">
              <div class="card-header">
                <h3 class="card-title">Expenses</h3>

                <div class="card-tools">
                  <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                  </button>
                  <button type="button" class="btn btn-tool" data-card-widget="remove">
                    <i class="fas fa-times"></i>
                  </button>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                 <div class="direct-chat-messages"> </div>

              </div>
              <div class="card-footer">
                <center><button type="submit" class="btn btn-info btn-xs">+ Expense</button></center>
              </div>
            </div>
          </div>
         
        </div>
    </div>

<div id="projet">

<!-- /.col -->
          <div class="col-md-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title"><button type="submit" class="btn btn-info btn-xs">+ Projet</button></h3>

                <div class="card-tools">
                  <ul class="pagination pagination-sm float-right">
                    <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
                  </ul>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body p-0">
                <table class="table">
                  <thead>
                    <tr>
                      <th style="width: 10px">#</th>
                      <th>Projet</th>
                      <th>Status</th>
                      <th style="width:40px"></th>
                      <th>Coût</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td>1.</td>
                      <td>CdP Bourse <br><small>Du 15 Jan. au 10 Fév. 2022</small></td>
                      <td>
                        <div class="progress progress-xs">
                          <div class="progress-bar progress-bar-danger" style="width: 10%"></div>
                        </div>
                      </td>
                      <td><span class="badge bg-primary">10%</span></td>
                      <td><small>$4,400.00</small></td>
                    </tr>
                    <tr>
                      <td>2.</td>
                      <td>CdP Talk <br><small>Du 05 Avr. au 10 Avr. 2022</small></td>
                      <td>
                        <div class="progress progress-xs">
                          <div class="progress-bar bg-warning" style="width: 0%"></div>
                        </div>
                      </td>
                      <td><span class="badge bg-warning">0%</span></td>
                       <td><small>$900.00</small></td>
                    </tr>
                    <tr>
                      <td>3.</td>
                      <td>CdP Don aux Sr des pauvres de Bergame  <br><small>Du 15 Déc. au 29 Déc. 2019</small></td>
                      <td>
                        <div class="progress progress-xs progress-striped active">
                          <div class="progress-bar bg-success" style="width: 100%"></div>
                        </div>
                      </td>
                      <td><span class="badge bg-success">100%</span></td>
                      <td><small>$2,900.00</small></td>
                    </tr>
                    
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->

          </div>
          <!-- /.col -->

</div>
      </div>
      </div>
          <!-- /.col -->
         
        </div>
        <!-- /.row -->
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
          
        </div>
        <!-- /.card-footer-->
      </div>
      <!-- /.card -->

    </section>
    <!-- /.content -->
  </div>
 
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <script>
  let projetElt = document.getElementById("projectMenu");
  let budgetElt = document.getElementById("budgetMenu");
  document.getElementById("budget").style.display = "block";
  document.getElementById("projet").style.display = "none";

  projetElt.addEventListener('click', function(event) {
      document.getElementById("projet").style.display = "block";
      document.getElementById("budget").style.display = "none";  
    });

  budgetElt.addEventListener('click', function(event) {
      document.getElementById("budget").style.display = "block"; 
      document.getElementById("projet").style.display = "none";
    });
  </script>
{% endblock %}
