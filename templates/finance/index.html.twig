{% extends 'template.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      
    </section>

    <!-- Main content -->
    <section class="content">

      <!-- Default box -->
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Financial Health 2022</h3>

          <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
              <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
              <i class="fas fa-times"></i>
            </button>
          </div>
        </div>
        <div class="card-body">
                <div class="row">
                  <div class="col-6 col-md-3 text-center">
                    <input type="text" class="knob" value="{{trackRevenue}}" data-thickness="0.1" data-width="90" data-height="90"
                           data-fgColor="#3c8dbc" class="navbar-btn sidebar-toggle" data-toggle="offcanvas" role="button" data-tooltip="tooltip" title="Budget 2022: ${{budget}} | YTD: ${{revenue}}">

                    <div class="knob-label">Incomes Tracker</div>
                  </div>
                  <!-- ./col -->
                  <div class="col-6 col-md-3 text-center">
                    <input type="text" class="knob" value="{{trackForecast}}" data-thickness="0.1" data-width="90" data-height="90"
                           data-fgColor="#f56954" class="navbar-btn sidebar-toggle" data-toggle="offcanvas" role="button" data-tooltip="tooltip" title="Budget 2022: ${{budget}} | YTD: ${{forecast}}">
                    <div class="knob-label">YTD Forecast</div>
                  </div>
                  <!-- ./col -->
                  <div class="col-6 col-md-3 text-center">
                    <input type="text" class="knob" value="60" data-thickness="0.1" data-width="90" data-height="90"
                           data-fgColor="#00a65a">

                    <div class="knob-label">Expenses vs Budget</div>
                  </div>
                  <!-- ./col -->
                  <div class="col-6 col-md-3 text-center">
                    <input type="text" class="knob" value="10" data-thickness="0.1" data-width="90" data-height="90"
                           data-fgColor="#00c0ef">

                    <div class="knob-label">Zero RaP</div>
                  </div>
                  <!-- ./col -->
                </div>
                <!-- /.row -->
              </div>
              <!-- /.card-body -->
        <div class="card-footer">
          Footer
        </div>
        <!-- /.card-footer-->
      </div>
      <!-- /.card -->

 <div class="row">
          <div class="col-lg-6">
            <div class="card">
              <div class="card-header border-0">
                <div class="d-flex justify-content-between">
                  <h3 class="card-title">Contributions View</h3>
                  <div class="card-tools">
                  <a href="#" class="btn btn-tool btn-sm">
                    <i class="fas fa-download"></i>
                  </a>
                </div>
                </div>
              </div>
              <div class="card-body">
                <div class="d-flex">
                  <p class="d-flex flex-column">
                    <span class="text-bold text-lg">$4,250.00</span>
                    <span>CoT - Contrbutions Over Time</span>
                  </p>
                  <p class="ml-auto d-flex flex-column text-right">
                    <span class="text-success">
                      <i class="fas fa-arrow-up"></i> 33.1%
                    </span>
                    <span class="text-muted">Month on Month</span>
                  </p>
                </div>
                <!-- /.d-flex -->

                <div class="position-relative mb-4">
                  <canvas id="sales-chart" height="200"></canvas>
                </div>

                <div class="d-flex flex-row justify-content-end">
                  <span class="mr-2">
                    <i class="fas fa-square text-primary"></i> 2021
                  </span>

                  <span>
                    <i class="fas fa-square text-gray"></i> 2020
                  </span>
                </div>
              </div>
            </div>
            <!-- /.card -->

          
          </div>
          <!-- /.col-md-6 -->
           <div class="col-lg-6">
            <div class="card">
              <div class="card-header border-0">
                <div class="d-flex justify-content-between">
                  <h3 class="card-title">Late Insights</h3>
                  <a href="#" class="btn btn-tool btn-sm">
                    <i class="fas fa-download"></i>
                  </a>
                </div>
              </div>
              <div class="card-body">
                <div class="d-flex">
                  <p class="d-flex flex-column">
                    <span class="text-bold text-lg">$820.00</span>
                    <span>RoT - RaP Over Time</span>
                  </p>
                  <p class="ml-auto d-flex flex-column text-right">
                    <span class="text-danger">
                      <i class="fas fa-arrow-down"></i> 12.5%
                    </span>
                    <span class="text-muted">MoM</span>
                  </p>
                </div>
                <!-- /.d-flex -->

                <div class="position-relative mb-4">
                  <canvas id="visitors-chart" height="200"></canvas>
                </div>

                <div class="d-flex flex-row justify-content-end">
                  <span class="mr-2">
                    <i class="fas fa-square text-primary"></i> 2021
                  </span>

                  <span>
                    <i class="fas fa-square text-danger"></i> 2020
                  </span>
                </div>
              </div>
            </div>
            <!-- /.card -->
           
   
            <!-- /.card -->
          </div>
          <!-- /.col-md-6 -->

          <!--.col-md-12 LISTING THE CONTRIBUTIONS TO BE VALIDATED-->
          

          <!-- Default box -->
      <div class="col-lg-12">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Contribution Validator</h3>

          <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
              <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
              <i class="fas fa-times"></i>
            </button>
          </div>
        </div>
        <div class="card-body">
                <table class="table table-striped table-valign-middle">
                  <thead>
                  <tr>
                 
                    <th>#</th>
                    <th>Contributeur </th>
                    <th>Montant</th>
                    <th>Periode</th>
                    <th>Soumis le</th>
                    <th>Action</th>
                  </tr>
                  </thead>
                  <tbody>
                   {% if pendingContribs %}
                   {% for pendingContrib in pendingContribs %}
                  <tr>
                    <td>{{pendingContrib.tid}}</td>
                    <td>{{pendingContrib.users.fname}} {{pendingContrib.users.lname}}</td>
                    <td>{{pendingContrib.amount |format_currency('USD', {rounding_mode: 'floor'})}}</td>
                    <td>{{pendingContrib.period}}</td>
                    <td>{{pendingContrib.createdAt |date("m/d/Y")}}</td>
                    <td>
                    {% if pendingContrib.status == '0'%}
                    <a href="{{path('finance_hand', {'user_id': pendingContrib.users.id})}}"><center><i class="far fa-hand-paper"></i></center></a>
                    
                    {% else %}
                        <center>
                    <a href="{{path('finance_validate', {'user_id': pendingContrib.users.id})}}" data-toggle="modal" data-target="#exampleModal"><img src="{{asset("dist/img/edit.png")}}" alt="Edit Icon" width='20' height='20' ></a>
                    
                     <a href="{{asset("uploads/proof/"~ pendingContrib.proof)}}" target="blank"><img src="{{asset("dist/img/search.png")}}" alt="Edit Icon" width='20' height='20' ></a></center>
                    {% endif %}
                    </td>
                    
                  </tr>
                
                   {% endfor %}
                   {% else %}
                     <tr>
                   <td colspan="6" style='text-align:center; vertical-align:middle'>Aucune contribution Ã  valider.  </td>
                   </tr>
                      {% endif %}
                   
                  </tbody>
                </table>
                <!-- /.row -->
              </div>
              <!-- /.card-body -->
              <div class="card-footer">
                <a href="{{path('finance_add_contribution')}}" class="btn btn-info btn-flat btn-sm">Contribution pour Tiers</a>
              </div>
        <!-- /.card-footer-->
      </div></div>
            <!-- /.card -->
          </div>
        </div>
        
        <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Validation Contribution</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
  <div class="modal-body">
  <center>
   {% if pendingContribs %}
  {% for pendingContrib in pendingContribs %}
  <form method='get' action='validate/{{pendingContrib.users.id}}'> 
  {% endfor %}{% endif %} 
  <div class="form-check">
  <input class="form-check-input" type="radio" name="RadioValidation" id="radioValidate" value="on">
  <label class="form-check-label" for="radioValidate">
    Approuver 
  </label>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
  <input class="form-check-input" type="radio" name="RadioValidation" id="radioRejete" value="off">
  <label class="form-check-label" for="radioRejete">
  Rejeter
  </label>
</div>

</center>  
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Valider</button>
      </div>
    </div>
    </form>  
  </div>
</div>
<script>
$(function () {
  $('[data-toggle="tooltip"]').tooltip()
})
</script>
{% endblock %}