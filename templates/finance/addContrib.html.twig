{% extends 'template.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}


    <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
       <div class="container-fluid">
        <div class="row">
            
          <!-- left column -->
          <div class="col-md-6 offset-3 mx-auto">
                            
            <!-- general form elements -->
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title" id="membre">Ajouter Contribution </h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              
                <div class="card-body">
                {{ form_start(contribForm) }}
                <div class="col">{{ form_row(contribForm.users, {'id': 'nomMembre', 'attr': { 'onChange': 'getMembre()', 'onClick': 'membreChange()'}})}}</div>
                <div class="col">{{ form_row(contribForm.amount,{
                  label: 'Montant'
                  }) }}</div>
                
                <div class="col">{{ form_row(contribForm.period,{
                  label: 'Période'
                  }) }}</div>
                <div class="col">{{ form_row(contribForm.paymentmode, {
                    label: 'Mode de Paiement'
                }) }}</div>
                
                <div class="col">{{ form_row(contribForm.proof) }}</div>
      </div>

            <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div>
               {{ form_end(contribForm) }}
            </div>
           </div>
           </div>
           </div> 
      

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
{% endblock %}

